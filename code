int read = digitalRead(4);
int value=255;

void setup()
{
  pinMode(4,INPUT);
  pinMode(7,OUTPUT);
  pinMode(8,OUTPUT);
  pinMode(12,OUTPUT);
  pinMode(13,OUTPUT);
}

void loop()
{
  if(read==HIGH){
    analogWrite(7,value/4);
    analogWrite(8,value/4);
    analogWrite(12,value/4);
    analogWrite(13,value/4);
    digitalWrite(7,HIGH);
    digitalWrite(8,LOW);
    digitalWrite(12,LOW);
    digitalWrite(13,LOW);
  }
  else{
    for(int i=7;i<=13;i++){
    	digitalWrite(i,LOW);
    }
  }
}
